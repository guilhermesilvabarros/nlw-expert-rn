{
  "extends": ["@rocketseat/eslint-config/react"],
  "plugins": ["eslint-plugin-import-helpers"],
  "rules": {
    "camelcase": "off",
    "no-useless-return": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@\//",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}